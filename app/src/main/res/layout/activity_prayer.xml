<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@drawable/backgroundmasjid"
    android:padding="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- City Name Container -->
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:background="@drawable/bg_text_container"
            android:elevation="4dp">

            <TextView
                android:id="@+id/cityName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kota: Jakarta"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:padding="12dp" />

        </FrameLayout>

        <!-- Buttons Container -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp">

            <!-- Tombol Kembali -->
            <ImageButton
                android:id="@+id/btnBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@android:drawable/ic_menu_revert"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Kembali ke Menu Utama"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true" />

            <!-- Tombol Kiblat -->
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:elevation="4dp"
                app:cardBackgroundColor="#33000000"
                app:cardCornerRadius="12dp">

                <ImageButton
                    android:id="@+id/btnToQibla"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Arah Kiblat"
                    android:padding="8dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/compass1" />
            </androidx.cardview.widget.CardView>

        </RelativeLayout>

        <!-- Prayer Cards Container -->
        <LinearLayout
            android:id="@+id/prayerTimesContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="8dp">
        </LinearLayout>
    </LinearLayout>
</ScrollView>