<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!-- City Name TextView -->
    <TextView
        android:id="@+id/cityName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="City: "
        android:textSize="18sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="20dp"/>

    <!-- Prayer Times TextViews -->
    <TextView
        android:id="@+id/fajr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fajr: "
        app:layout_constraintTop_toBottomOf="@id/cityName"
        app:layout_constraintStart_toStartOf="parent"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/dhuhr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dhuhr: "
        app:layout_constraintTop_toBottomOf="@id/fajr"
        app:layout_constraintStart_toStartOf="parent"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/asr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Asr: "
        app:layout_constraintTop_toBottomOf="@id/dhuhr"
        app:layout_constraintStart_toStartOf="parent"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/maghrib"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Maghrib: "
        app:layout_constraintTop_toBottomOf="@id/asr"
        app:layout_constraintStart_toStartOf="parent"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/isha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Isha: "
        app:layout_constraintTop_toBottomOf="@id/maghrib"
        app:layout_constraintStart_toStartOf="parent"
        android:textSize="18sp" />

</androidx.constraintlayout.widget.ConstraintLayout>
